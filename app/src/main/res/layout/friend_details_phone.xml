<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relPhoneDataContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgPhoneData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_phone_small">

        </ImageView>

        <TextView
            android:id="@+id/tvPhoneData"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:gravity="center"
            android:layout_toEndOf="@id/imgPhoneData"
            android:layout_toRightOf="@id/imgPhoneData"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:text="@string/phone_placeholder"
            android:textColor="@color/colorPrimaryDark">
        </TextView>

        <View
            android:id="@+id/linePhoneDataSeparator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/imgPhoneData"
            android:background="@color/colorDisabled"
            android:layout_marginTop="20dp"/>

</RelativeLayout>